{% extends "::base.html.twig" %}

{% block title %}Klant detail{% endblock %}
{% block head %}

    <link rel="stylesheet"
                        href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container">

        <a class="btn btn-default"  href="{{ path('home') }}" >
            <div class="glyphicon glyphicon-chevron-left"></div>Terug</a>

    <form class="form" method="post" name="form">

        <div class="form-group">
            <label for="naam">Naam: </label>
            <input type="text" class="form-control" id="naam" name="naam" value={{ klantdetails.naam }}>
        </div>

        <div class="form-group">
            <label for="naam">Habit1: </label>
            <input type="text" class="form-control" id="habit1" value={{ klantdetails.habit1 }}>
        </div>

        <div class="form-group">
            <label for="naam">Habit2: </label>
            <input type="text" class="form-control" id="habit2" value={{ klantdetails.habit2 }}>
        </div>

        <div class="form-group">
            <label for="naam">Habit3: </label>
            <input type="text" class="form-control" id="habit3" value={{ klantdetails.habit3 }}>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
        <button type="reset" class="btn btn-default">Undo</button>
        <a class="btn btn-danger"  href="{{ path('deleteKlant', { 'klantid': klantdetails.id }) }}" >Verwijderen</a>
    </form>


        <h2>Daliy report</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Datum</th>
                <th>{{ klantdetails.habit1 }}</th>
                <th>{{ klantdetails.habit2 }}</th>
                <th>{{ klantdetails.habit3 }}</th>
                <th>Gewicht</th>
                <th>Totaal ingenome calorieÃ«n</th>
            </tr>
            </thead>
            <tbody>
            {% if progReport  %}
                {% for p in progReport %}
                    <tr>
                        <td>{{ p.date }}</td>
                        <td>{{ p.progresshabit1 }}</td>
                        <td>{{ p.progresshabit2 }}</td>
                        <td>{{ p.progresshabit3 }}</td>
                        <td>{{ p.weight }}</td>
                        <td>{{ p.calories }}</td>

                    </tr>
                {% endfor %}
            {% else %}Nog geen habit ingave uitgevoerd.
            {% endif %}
            </tbody>
        </table>

    </div>
{% endblock %}